<Window x:Class="Astrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Name="LoginPanel" Visibility="Visible">
            <Button Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" Width="200" Click="LoginButton_Click"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" Width="200"/>
            <PasswordBox Name="PasswordBox" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="200"/>
        </Grid>
        <Grid Name="StatusPanel" Visibility="Visible" Background="AliceBlue">
            
            <Button Name="StartButton" Content="Run" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>
            <CheckBox Name="QuestCheckBox" Content="Quest" IsChecked="{Binding IsQuestEnable}" HorizontalAlignment="Left" Margin="11,62,0,0" VerticalAlignment="Top"/>
            <CheckBox Name="RaidCheckBox" Content="Raid" IsChecked="{Binding IsRaidEnable}" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top"/>

        </Grid>
    </Grid>
</Window>
